{
  "manifest_version": 3,
  "name": "CodeBloom",
  "version": "1.0.0",
  "description": "Celebrate Accepted submissions on LeetCode with a positive popup and confetti.",
  "icons": { "128": "icons/icon128.png" },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*", "https://*.leetcode.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}

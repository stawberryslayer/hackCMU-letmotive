{
  "manifest_version": 3,
  "name": "CodePup",
  "version": "1.0.0",
  "description": "Enhances the LeetCode coding experience with cute and motivational pup.",
  "icons": { "128": "icons/dog.png" },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*", "https://*.leetcode.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/dog.png", "icons/happydog.gif", "icons/saddog.gif", "icons/sitdog.png", "celebration-popup.html", "icons/eat.gif"],
      "matches": ["https://leetcode.com/*", "https://*.leetcode.com/*"]
    }
  ],
  "action": {"default_popup": "celebration-popup.html"},
  "permissions": []
}
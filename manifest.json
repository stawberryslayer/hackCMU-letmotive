{
    "manifest_version": 3,
    "name": "myPlugin",
    "version": "1.0.0",
    "description": "Celebrate your Accepted submissions with positive, uplifting hints.",
    "icons": { "128": "icons/icon128.png" },
    "content_scripts": [
      {
        "matches": ["https://leetcode.com/*", "https://*.leetcode.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "permissions": []
  }
  